@model Volkswagen.Models.Vehicles

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>

<h4>@Html.DisplayFor(model => model.model)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <!--Fetch & Save image-->
            <input type="hidden" asp-for="image" />

            <div class="form-group">
                <label for="make">Make</label>
                <input asp-for="make" class="form-control" />
                <span asp-validation-for="make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="model">Model</label>
                <input asp-for="model" class="form-control" />
                <span asp-validation-for="model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="features">Features</label>
                <input asp-for="features" class="form-control" />
                <span asp-validation-for="features" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="stockAmount">Stock</label>
                <input asp-for="stockAmount" class="form-control" />
                <span asp-validation-for="stockAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}